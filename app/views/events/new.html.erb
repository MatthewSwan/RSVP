<h1>Add A New Event</h1>

<%= form_for(@event) do |e| %>
  <%= e.label :title %>
  <%= e.text_field :title %>
  <%= e.label :date %>
  <%= e.datetime_select :datetime %>
  <%= e.label :address %>
  <%= e.text_field :address %>
  <%= e.label :description %>
  <%= e.text_field :description %>
  <%= e.submit %>
<% end %>

